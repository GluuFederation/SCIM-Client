<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >

<!-- Only SCIM v2.0 compliance tests here -->
<suite name="SCIM-Client v2.0 compliance gaps" parallel="false">

    <parameter name="file" value="target/test-classes/testng2.properties" />

    <test name="Service Provider Configuration Endpoints Test" enabled="false">
        <!-- section 4 RFC 7644 -->
        <classes>
            <class name="gluu.scim2.client.servicemeta.ServiceProviderConfigTest" />
            <class name="gluu.scim2.client.servicemeta.ResourceTypesTest" />
            <class name="gluu.scim2.client.servicemeta.SchemasTest" />
        </classes>
    </test>

    <test name="Minimalist resources Test" enabled="false">
        <classes>
            <class name="gluu.scim2.client.singleresource.MinimalUserTest" />
            <class name="gluu.scim2.client.singleresource.MinimalGroupTest" />
        </classes>
    </test>

    <test name="User Resource Test" enabled="false">
        <classes>
            <class name="gluu.scim2.client.singleresource.AverageUserTest" />
            <class name="gluu.scim2.client.search.SimpleSearchUserTest" />
            <class name="gluu.scim2.client.search.ComplexSearchUserTest" />
            <class name="gluu.scim2.client.search.PaginationUserSearchTest" />
            <class name="gluu.scim2.client.singleresource.FullUserTest" />
        </classes>
    </test>

    <test name="Fido Devices Test" enabled="false">
        <classes>
            <class name="gluu.scim2.client.singleresource.FidoDeviceTest" />
        </classes>
    </test>

    <test name="Attributes query param tests" enabled="false">
        <classes>
            <class name="gluu.scim2.client.singleresource.QueryParamRetrievalTest" />
            <class name="gluu.scim2.client.singleresource.QueryParamCreateUpdateTest" />
        </classes>
    </test>

    <test name="Multiple Resources Test" enabled="false">
        <classes>
            <class name="gluu.scim2.client.search.MultipleResourcesSearchTest" />
        </classes>
    </test>

    <test name="Patches" enabled="false">
        <classes>
            <class name="gluu.scim2.client.patch.PatchReplaceUserTest" />
            <class name="gluu.scim2.client.patch.PatchAddUserTest" />
            <class name="gluu.scim2.client.patch.PatchDeleteUserTest" />
            <class name="gluu.scim2.client.patch.PatchGroupTest" />
            <class name="gluu.scim2.client.patch.PatchUserExtTest" />
        </classes>
    </test>

    <test name="Corner and other weird cases" enabled="false">
        <classes>
            <class name="gluu.scim2.client.corner.WrongPayloadUserExtTest" />
            <class name="gluu.scim2.client.corner.WrongPayloadUserTest" />
        </classes>
    </test>

    <test name="Bulk operations" enabled="true">
        <classes>
            <class name="gluu.scim2.client.bulk.UsersBulkTest" />
            <!--class name="gluu.scim2.client.bulk.GroupsBulkTest" /-->
        </classes>
    </test>

    <test name="Naughty dummy tests" enabled="false">
        <classes>
            <class name="gluu.scim2.client.SampleTest" />
        </classes>
    </test>

</suite>